<UserControl x:Class="ArchOp.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArchOp"
        mc:Ignorable="d">
    <Grid>
        <!-- Define Columns for Sidebar and Main Content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <!-- Sidebar -->
            <ColumnDefinition Width="*" />
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <DockPanel Background="#F0F0F0" Grid.Column="0" VerticalAlignment="Stretch">
            <Grid Grid.Row="1" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="20" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="10" />
                </Grid.RowDefinitions>
                <Button Grid.Row="1" Content="Create Invoice" FontSize="15" Height="40" Margin="20,5,20,5" Command="{Binding: NavToInvoiceMakerCommand}"/>
                <Button Grid.Row="3" Content="View Sent Invoices" Height="40" FontSize="15" Margin="20,5,20,5" Command="{Binding: NavToSentInvoiceCommand}"/>
                <Button Grid.Row="5" Content="Log Out" Height="40" FontSize="15" Margin="20,5,20,5" Command="{Binding: NavToLogOutCommand}"/>
                <Button Grid.Row="7" Content="Set Company" Height="40" FontSize="15" Margin="20,5,20,5" Command="{Binding: NavToSetCompanyCommand}"/>
                <Button Grid.Row="9" Content="Add Company" Height="40" FontSize="15" Margin="20,5,20,5" Command="{Binding: NavToAddCompanyCommand}"/>
                
                <Button Grid.Row="15" Content="Log out" FontWeight="Bold" FontSize="26" Height="40" Margin="20,0,20,0"
                        Click="ViewSentInvoicesClick" Background="#0078D7" Foreground="White"/>
                

                    <!-- Add more buttons as needed -->
            </Grid>
        </DockPanel>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <!-- Welcome Text -->
            <TextBox Grid.Row="0" Text="Welcome to ArchOp" 
                     FontSize="24" VerticalAlignment="Center" 
                     HorizontalAlignment="Center" 
                     IsReadOnly="True" BorderThickness="0" />

            <!-- Frame for Navigation -->
            <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" />

            <!-- Removed Button from Bottom -->
        </Grid>
    </Grid>
</UserControl>
