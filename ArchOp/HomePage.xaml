<Window x:Class="ArchOp.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArchOp"
        mc:Ignorable="d"
        Title="Home" 
        Width="800"
        Height="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    <Grid>
        <!-- Define Columns for Sidebar and Main Content -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <!-- Sidebar -->
            <ColumnDefinition Width="*" />
            <!-- Main Content -->
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <DockPanel Background="#F0F0F0" Grid.Column="0" VerticalAlignment="Stretch">
            <StackPanel Margin="10">
                <Button Content="Create Invoice" Height="40" Margin="0,5,0,5" Click="CreateInvoiceClick"/>
                <Button Content="View Sent Invoices" Height="40" Margin="0,5,0,5" Click="ViewSentInvoicesClick"/>
                <Button Content="Set Company" Height="40" Margin="0,5,0,5" Click="SetCompanyClick"/>
                <!-- Add more buttons as needed -->
            </StackPanel>
        </DockPanel>

        <!-- Main Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*" />
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <!-- Welcome Text -->
            <TextBox Grid.Row="0" Text="Welcome to ArchOp" 
                     FontSize="24" VerticalAlignment="Center" 
                     HorizontalAlignment="Center" 
                     IsReadOnly="True" BorderThickness="0" />

            <!-- Frame for Navigation -->
            <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" />

            <!-- Removed Button from Bottom -->
        </Grid>
    </Grid>
</Window>
